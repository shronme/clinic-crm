# Clinic CRM Backend Environment Variables
# Copy this file to .env and update with your actual values

# Basic settings
PROJECT_NAME=Clinic CRM
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Descope Authentication
# Get these from: https://app.descope.com/
DESCOPE_PROJECT_ID=your-descope-project-id-here
DESCOPE_MANAGEMENT_KEY=your-descope-management-key-here

# Database
DATABASE_URL=postgresql+asyncpg://clinic_user:clinic_password@localhost:5432/clinic_crm

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=./uploads

# Email (SendGrid) - Optional
SENDGRID_API_KEY=
FROM_EMAIL=noreply@cliniccrm.com

# SMS (Twilio) - Optional
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Celery
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
